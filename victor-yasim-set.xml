    </refuelling>

    <chute-pos-norm type="float">0.0</chute-pos-norm>
    <!-- trim for level cruise -->

    <flight>
      <aileron-trim>0.0</aileron-trim>
      <rudder-trim>0.0</rudder-trim>
    </flight>

  </controls>


